<Window x:Class="RusLat.ScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RusLat"
        mc:Ignorable="d"
        WindowStyle="None" ShowInTaskbar="False" Background="Gray" AllowsTransparency="True" Opacity="0.5"
        Height="300" Width="300" Left="0" Top="0" Topmost="True" WindowState="Maximized"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseMove="Window_MouseMove">
  <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Rectangle x:Name="Selection" Canvas.Left="0" Canvas.Top="0" Width="0" Height="0" Stroke="Red"></Rectangle>
  </Canvas>
</Window>
